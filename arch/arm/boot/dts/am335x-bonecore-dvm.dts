&spi1 {
  status = "okay";
  pinctrl-names = "default";
  pinctrl-0 = <&bb_spi1_pins>;

  spidev@0 {
    compatible = "linux,spidev";
    spi-max-frequency = <3800000>;
    reg = <0>;
    // spi-cpha;
  };
};

